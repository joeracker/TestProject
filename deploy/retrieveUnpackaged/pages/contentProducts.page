<apex:page standardController="PRM_Page__c" extensions="contentProductsCtrl" sidebar="false" showheader="false">
	 <script>
        function fileDL(attID){
            window.open('/servlet/servlet.FileDownload?file=' + attID);
        }
    </script>
	<style>
		.bPageBlock, .individualPalette .bPageBlock {
		  background-color: #FFFFFF;
		  border: 0px solid #C1C1C1;
		}
	</style>
	
	<apex:outputPanel rendered="{!NOT(ISNULL(prmContent))}">
		<div>
	
		   <span style="font-family: Georgia,Palatino,Palatino Linotype,Times,Times New Roman,serif; font-size:28px; color:#4C92E2">{!prmContent.Page_Category__c} </span>
		   <span style="font-family: Georgia,Palatino,Palatino Linotype,Times,Times New Roman,serif; font-size:22px; color:#666666">/ {!prmContent.Page_Subcategory__c}</span>
		
		   <br/><br/>    
		   <img src="{!$Resource.hr}" />
		   <br/><br/>    
		   
		   <table width="100%">
		        <tr>
		        	<td style="float: left; width: 500px;">
					
						<span style="font-weight: normal; font-size: 20px; margin-bottom: 10px; color: #666666; line-height: 24px;">
					      {!prmContent.Subject__c}
					    </span>
						        
			        	<apex:pageBlock >
				        	<apex:outputField value="{!prmContent.Content__c}" />
						</apex:pageBlock>
						<apex:tabPanel id="attTabPanel" switchType="client">
							<apex:tab id="mHostingTab" label="Managed Hosting">
								<apex:dataTable value="{!managedHostingList}" var="mHostList">
									<apex:column >
										<apex:outputLink value="javascript: fileDL('{!mHostList.id}');">{!mHostList.Name}</apex:outputLink>
									</apex:column>
								</apex:dataTable>
							</apex:tab>
							
							<apex:tab id="pCloudHostingTab" label="Private Cloud Hosting">
								<apex:dataTable value="{!privateCloudHostingList}" var="pHostList">
									<apex:column >
										<apex:outputLink value="javascript: fileDL('{!pHostList.id}');">{!pHostList.Name}</apex:outputLink>
									</apex:column>
								</apex:dataTable>
							</apex:tab>
							
							<apex:tab id="cloudHostingTab" label="Cloud Hosting">
								<apex:dataTable value="{!cloudHostingList}" var="cHostList">
									<apex:column >
										<apex:outputLink value="javascript: fileDL('{!cHostList.id}');">{!cHostList.Name}</apex:outputLink>
									</apex:column>
								</apex:dataTable>
							</apex:tab>
							
							<apex:tab id="emailAndAppHostingTab" label="Email & Application Hosting">
								<apex:dataTable value="{!emailAndAppHostingList}" var="eHostList">
									<apex:column >
										<apex:outputLink value="javascript: fileDL('{!eHostList.id}');">{!eHostList.Name}</apex:outputLink>
									</apex:column>
								</apex:dataTable>
							</apex:tab>
						</apex:tabPanel>
		        	</td>
			        <td style="vertical-align: top;">
			        	<apex:include pageName="contentSideBar"></apex:include>
			        </td>
		   </tr>
		   </table>
	  </div>
	</apex:outputPanel>
	<apex:outputPanel rendered="{!ISNULL(prmContent)}">
		<img src="{!$Resource.hr}" />
		<span style="font-family: Georgia,Palatino,Palatino Linotype,Times,Times New Roman,serif; font-size:22px; color:#FF0000">
			The requested page is not available. Sorry for the inconvenience.
		</span>
		<img src="{!$Resource.hr}" />
	</apex:outputPanel>
</apex:page>