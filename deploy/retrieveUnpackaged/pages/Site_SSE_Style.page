    }
    
        .tab td.currentTab,
        #tabBar td,
        #tabBar div,
        #tabBar td.currentTab primaryPalette,
        #tabBar td.currentTab primaryPalette div,
        #tabBar td.currentTab primaryPalette div a{
        
            background:none;
            background-color:transparent;
            border:none;
            padding:0;
            margin:0;
        
        }
    
            #tabBar a {
                text-decoration: none; 
                color:#FFFFFF;
                display:block;
                padding:7px 14px 8px;
                border-right:1px solid #7D7D7D;
                font-family:Arial,Helvetica Neue,Helvetica,sans-serif;
                font-size:100%;
                font-weight:bold;
                
            }
            
            #tabBar a[title*="Home"]{
                -moz-border-radius-topleft:4px;
                -moz-border-radius-bottomleft:4px;              
            }
            
            #tabBar a:hover { 
                background: #7D7D7D;
              
            }
              
            #tabBar .currentTab a {
                background:#EC2730;
            
            }
        
            #tabBar .last a {
            
            }
    
    body {
        background: url("{!URLFOR($Resource.ppbg)}") no-repeat scroll 100px 100px #CECECE

    }
      
    .bodyDiv {  
        min-height: 1500px;
        width:980px; /* If your portal is a different width change this */
        left:0px;
        margin:13px auto 0 !important;
        position:relative;
        text-align:left;  
        border-bottom: 0;
        background: url("{!URLFOR($Resource.bodyDivBG)}") repeat-y;
        -moz-border-radius:6px 6px 6px 6px;
        -moz-box-shadow:0 0px 10px #333;
        
        
    }

    #bodyDiv, #container_pageFooter{ 
        width:980px; /* If your portal is a different width change this too */
        left:0px;
        margin:0pt auto;
        position:relative;
        text-align:left;
    }
    
    .bodyDiv, #bodyDiv{
        border: none;
    }
    
    #ideaSubtabs ul#nav .ideasCurrentTab div a, .ideaViewCategory, .workspaceTab .bPageBlock .pbButton label, h1.search, h1.recent, .ideaViewStatus{
        color: white;
    }
    
/** Rounded Sidebar **/
    
    .sidebarModule{
        background: none;
        box-shadow: 0px 2px 6px #ccc;
        /*-webkit-box-shadow: 0px 2px 6px #ccc;
        -moz-box-shadow: 0px 2px 6px #ccc;
        */
        -moz-border-radius: 6px;
        -webkit-border-radius: 6px;
    }
    
        .sidebarModuleHeader{
            -moz-border-radius-topleft: 6px;
            -webkit-border-top-left-radius: 6px;
            -moz-border-radius-topright: 6px;
            -webkit-border-top-right-radius: 6px;
            background:none repeat scroll 0 0 #2792EC;
        }
        
        .sidebarModuleBody{
            -moz-border-radius-bottomleft: 6px;
            -webkit-border-bottom-left-radius: 6px;
            -moz-border-radius-bottomright: 6px;
            -webkit-border-bottom-right-radius:  6px;
            background-color:#CECECE;
        }
        
        .sidebarModuleBodyNoHeader{
            -moz-border-radius-topleft: 6px;
            -webkit-border-top-left-radius: 6px;
            -moz-border-radius-topright: 6px;
            -webkit-border-top-right-radius: 6px;
        }
        
        .nestedModule .sidebarModuleBody{
            margin: 0;
            padding: 10px;
        }


